<h1>Listing Studies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Project</th>
  </tr>

<% for study in @studies %>
  <tr>
    <td><%=h study.name %></td>
    <td><%=h study.description %></td>
    <td><%=h study.project.name %></td>
    <td><%= link_to 'Show', study_path(study) %></td>
    <td><%= link_to 'Edit', edit_study_path(study) %></td>
    <td><%= link_to 'Destroy', study, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

