<h2>Billing Report</h2>

<% if(@paged_lanes != nil && @paged_lanes.size > 0) %>
<table id="table" class="sortable" cellpadding="0" cellspacing="0" border="0">
  <thead>
    <tr>
      <th><h3>Date</h3></th>
      <th><h3>Sample</h3></th>
      <th><h3>Submitted By</h3></th>
      <th><h3>Budget</h3></th>
      <th><h3>Kit</h3></th>
      <th><h3>Requested Cycles</h3></th>
    </tr>
  </thead>
    <% for lane in @paged_lanes %>
      <% next if lane.flow_cell.sequencing_runs.size == 0 %>
      <tr>
        <td><%=h lane.flow_cell.sequencing_runs.best[0].date.strftime("%Y/%m/%d") %></td>
        <td><%=h lane.sample_mixture.short_and_long_name %></td>
        <td>
          <%=h lane.sample_mixture.submitted_by_id && @users_by_id[lane.sample_mixture.submitted_by_id] ?
            @users_by_id[lane.sample_mixture.submitted_by_id].full_name : "" %>
        </td>
        <td><%=h lane.sample_mixture.budget_number %></td>
        <td><%=h lane.sample_mixture.sample_prep_kit.name %></td>
        <td><%=h lane.sample_mixture.desired_read_lengths %></td>
      </tr>
    <% end %>
  </table>

  <%= render :partial => 'shared/tinytable', :locals => {:sort_column => 0} %>
<% else %>
  <p>There are currently no flow cell lanes.</p>
<% end %>

